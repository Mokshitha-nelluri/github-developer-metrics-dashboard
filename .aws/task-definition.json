{
  "family": "github-metrics-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::759087331108:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::759087331108:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "github-metrics-container",
      "image": "759087331108.dkr.ecr.us-east-1.amazonaws.com/github-metrics:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8501,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "AWS_DEPLOYMENT",
          "value": "true"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "STREAMLIT_SERVER_PORT",
          "value": "8501"
        },
        {
          "name": "STREAMLIT_SERVER_ADDRESS",
          "value": "0.0.0.0"
        },
        {
          "name": "STREAMLIT_SERVER_HEADLESS",
          "value": "true"
        },
        {
          "name": "OAUTH_REDIRECT_URI",
          "value": "http://localhost:5000/auth/callback"
        }
      ],
      "secrets": [
        {
          "name": "GITHUB_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:759087331108:secret:github-metrics/github-token-HJvCJp"
        },
        {
          "name": "GITHUB_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:759087331108:secret:github-metrics/github-client-id-nDooCY"
        },
        {
          "name": "GITHUB_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:759087331108:secret:github-metrics/github-client-secret-NuQvC1"
        },
        {
          "name": "GEMINI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:759087331108:secret:github-metrics/gemini-api-key-Bbs59r"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:759087331108:secret:github-metrics/database-url-OqfVv8"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/github-metrics",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8501/_stcore/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
